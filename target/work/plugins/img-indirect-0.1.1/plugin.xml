<plugin name='img-indirect' version='0.1.1' grailsVersion='2.0 &gt; *'>
  <author>jmiguel rodriguez</author>
  <authorEmail>jmiguel@virtualsw.com</authorEmail>
  <title>Image Indirect Plugin</title>
  <description>Allows access to images outside the web server environment (typically, folders not mapped for web applications)</description>
  <documentation>http://grails.org/plugin/img-indirect</documentation>
  <type>ImgIndirectGrailsPlugin</type>
  <resources>
    <resource>com.virtualsw.ImageIndirectController</resource>
    <resource>com.virtualsw.Prueba1Controller</resource>
    <resource>com.virtualsw.ImageIndirectService</resource>
    <resource>com.virtualsw.ImageIndirectTagLib</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://grails.org/plugins' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
  </repositories>
  <dependencies />
  <plugins />
  <runtimePluginRequirements />
  <behavior />
</plugin>